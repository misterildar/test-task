{
  "useTabs": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "printWidth": 100,
  "endOfLine": "auto",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "quoteProps": "consistent",
  "singleAttributePerLine": true,
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",
  "overrides": [
    {
      "files": ["*.md", "*.mdx"],
      "options": {
        "proseWrap": "always",
        "tabWidth": 2
      }
    },
    {
      "files": ["*.json", "*.yml", "*.yaml"],
      "options": {
        "useTabs": true
      }
    },
    {
      "files": ["*.html", "*.htm"],
      "options": {
        "htmlWhitespaceSensitivity": "strict"
      }
    }
  ]
}
